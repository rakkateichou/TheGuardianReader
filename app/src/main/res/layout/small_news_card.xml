<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/small_card_top_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/brightness_100"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/small_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/small_card_top_line"
        tools:text="Title / This is some test text" />

    <ImageView
        android:id="@+id/small_card_comment_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.7"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/small_card_title"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/small_card_comment_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="@id/small_card_comment_icon"
        app:layout_constraintLeft_toRightOf="@id/small_card_comment_icon"
        tools:ignore="RtlHardcoded"
        tools:text="999" />
</androidx.constraintlayout.widget.ConstraintLayout>